                    <option value="New Orleans Pelicans" <%= data.team === "New Orleans Pelicans" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/new-orleans-pelicans.png">New Orleans Pelicans</option>
                    <option value="New York Knicks" <%= data.team === "New York Knicks" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/new-york-knicks.png">New York Knicks</option>
                    <option value="Oklahoma City Thunder" <%= data.team === "Oklahoma City Thunder" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/oklahoma-city-thunder.png">Oklahoma City Thunder</option>
                    <option value="Orlando Magic" <%= data.team === "Orlando Magic" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/orlando-magic.png">Orlando Magic</option>
                    <option value="Philadelphia 76ers" <%= data.team === "Philadelphia 76ers" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/philadelphia-76ers.png">Philadelphia 76ers</option>
