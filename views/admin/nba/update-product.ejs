                    <option value="Golden State Warriors" <%= data.team === "Golden State Warriors" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/golden-state-warriors.png">Golden State Warriors</option>
                    <option value="Houston Rockets" <%= data.team === "Houston Rockets" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/houston-rockets.png">Houston Rockets</option>
                    <option value="Indiana Pacers" <%= data.team === "Indiana Pacers" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/indiana-pacers.png">Indiana Pacers</option>
                    <option value="Los Angeles Clippers" <%= data.team === "Los Angeles Clippers" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/los-angeles-clippers.png">Los Angeles Clippers</option>
                    <option value="Los Angeles Lakers" <%= data.team === "Los Angeles Lakers" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/los-angeles-lakers.png">Los Angeles Lakers</option>
                    <option value="Memphis Grizzlies" <%= data.team === "Memphis Grizzlies" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/memphis-grizzlies.png">Memphis Grizzlies</option>
                    <option value="Miami Heat" <%= data.team === "Miami Heat" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/miami-heat.png">Miami Heat</option>
                    <option value="Milwaukee Bucks" <%= data.team === "Milwaukee Bucks" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/milwaukee-bucks.png">Milwaukee Bucks</option>
