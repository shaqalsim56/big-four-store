                    <option value="San Antonio Spurs" <%= data.team === "San Antonio Spurs" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/san-antonio-spurs.png">San Antonio Spurs</option>
                    <option value="Toronto Raptors" <%= data.team === "Toronto Raptors" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/toronto-raptors.png">Toronto Raptors</option>
                    <option value="Utah Jazz" <%= data.team === "Utah Jazz" ? 'selected' : '' %> data-logo-url="/assets/teams-logos/nba/utah-jazz.png">Utah Jazz</option>
