                </select><br><br>
                                
                <div id="teamImage" class="team-image"></div>
            </div>
        
            <div>
                <label for="gender"><b>Gender: </b></label>
                <select name="gender">
                    <option value="">Please Choose The Gender</option>
                    <option value="Mens" <%= data.gender === "Mens" ? 'selected' : '' %>>Mens</option>
                    <option value="Womens" <%= data.gender === "Womens" ? 'selected' : '' %>>Womens</option>
                    <option value="Unisex" <%= data.gender === "Unisex" ? 'selected' : '' %>>Unisex</option>
                </select>
            </div>
            
        
            <div>
                <label for="product_name"><b>Name of Product:   </b></label>
                <input type="text" name="product_name" value="<%= data.product_name %>" style="width: 60%; margin-bottom: 20px;"> 
            </div>
            
        
            <div>
                <label for="product_desc"><b>Product Description:   </b></label><br>
               <textarea name="product_desc" id="" cols="60" rows="10"><%= data.product_desc %></textarea>
            </div>
        
            <div>
                <label for="category"><b>Category:   </b></label>
                <select name="category">
                    <option value="">Please Choose The Product Category</option>
                    <option value="T-Shirt" <%= data.category === "T-Shirt" ? 'selected' : '' %>>T-Shirt</option>
                    <option value="Jersey" <%= data.category === "Jersey" ? 'selected' : '' %>>Jersey</option>
                    <option value="Sweatshirt" <%= data.category === "Sweatshirt" ? 'selected' : '' %>>Sweatshirt</option>
                    <option value="Headwear" <%= data.category === "Headwear" ? 'selected' : '' %>>Headwear</option>
                    <option value="Bottoms" <%= data.category === "Bottoms" ? 'selected' : '' %>>Bottoms</option>
                    <option value="Footwear" <%= data.category === "Footwear" ? 'selected' : '' %>>Footwear</option>
                    <option value="Accessories" <%= data.category === "Accessories" ? 'selected' : '' %>>Accessories</option>
                </select>
            </div>
            
        
            <div>
                <label for="price"><b> Product Price (JMD):   </b></label>
                <input type="number" name="price" value="<%= data.price %>" style="width: 40%;">
            </div>
        
            <div>
                <label for="image" id="file-upload"><b>Upload Product Image: </b></label>
                <input type="file" name="image" id="file" style="width: 40%;"><br>
            </div>
        
            
            <div>
                <input type="submit" class="btn btn-success" value="Update Product">
            </div>
        </form>
      
      <div class="side-image">
        <img src="/assets/admin-images/devin-booker.png" alt="">
      </div>
</div>
<script src="/scripts/updateTeamLogo.js"></script>
