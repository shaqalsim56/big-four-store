<%- include('../../partials/header-admin'); %>
<h2 class="header-title">View Product</h2>
<input type="hidden" name="id" value="<%= data.id %>">
<div class="view-container">
    <div class="side-image">
        <img src="/assets/admin-images/kawhi-leonard.png" alt="">
    </div>
    
    <div class="view-content-container">
        <% if(data.img){ %>
          <img src="/uploads/<%= data.img %>" alt="Product Image" style="width:50%">
          <% }else {  %>
            <img src="/uploads/default_image.png" alt="Default Image" style="width:20%">
         <% } %>
         <div class="container">
          <h4><b><%= data.product_name %></b></h4>
          <h5><b>Category: <%= data.category %></b></h5>
          <p><%= data.product_desc %></p>
            <h3>Priced at: <%= data.price.toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %></h3>
            <a href="/admin-nba" class="btn btn-success">Return to Products</a>
        </div>
      </div>
      
      <div class="side-image">
        <img src="/assets/admin-images/damian-lillard.png" alt="">
      </div>
</div>

